
@{
    ViewBag.Title = "Index";
}
<h2>@ViewBag.messsage</h2>
<h2>Toți studenții</h2>

<div>
    @foreach (practica_fmi.Models.Student student in ViewBag.students)
    {
        <div class="panel panel-default">
            <p>@student.Nume @student.Prenume</p>
            <br />
            <p>@student.AnStudiu</p>
            <br />
            <p>@student.Email</p>
            <br />
            <div class="panel-footer">
                <a href="/Students/Edit/@student.StudentId" class="btn btn-primary pull-left">Editează</a>
                <form method="post" action="/Students/Delete/@student.StudentId">
                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                    <button class="btn btn-danger pull-right" type="submit">Șterge</button>
                </form>
                <div class="clearfix"></div>
            </div>
        </div>
    }
    <a href="/Students/New/" class="btn btn-success">Adaugă un student nou</a>
</div>

