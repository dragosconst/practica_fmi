<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
</head>
<body>
    <div class="navbar moodle-navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("moodle", "Index", "Cursuri", new { area = "" }, new { @class = "navbar-brand moodle-navbar" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (ViewBag.admin == true)
                    {
                        <li>@Html.ActionLink("Profesori", "Index", "Profesors", new { area = "" }, new { @class = "moodle-navbar" })</li>
                        <li>@Html.ActionLink("Studenți", "Index", "Students", new { area = "" }, new { @class = "moodle-navbar" })</li>
                    }

                    <li>@Html.ActionLink("Cursuri", "Index", "Cursuri", new { area = "" }, new { @class = "moodle-navbar" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @if (HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString() == "Cursuri"
        && HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString() == "Index")
    {
        <br /> 
        <div class="row justify-content-center">
            <form id="search_form" class="card card-sm" method="GET">
                <div class="card-body row no-gutters align-items-center right-pad">
                    <div class="col-auto">
                        <i class="fas fa-search h4 text-body"></i>
                    </div><!--end of col-->
                    <div class="col-auto">
                        <button class="btn btn-success pull-right glyphicon glyphicon-search" type="submit"></button>
                    </div><!--end of col-->
                    <div class="col">
                        <input id="search_item" class="form-control form-control-lgform-control-borderless pull-right" type="text" name="search" value="@ViewBag.SearchStr" placeholder="Scrie numele cursului...">
                    </div><!--end of col-->
                </div>

            </form>
            <!--end of col-->
        </div>
    }
    @RenderSection("LeftMenu", required: false)
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - moodle clone</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script language="javascript" type="text/javascript" src="~/Scripts/summernote_stuff.js"></script>
    <script language="javascript" type="text/javascript" src="~/Scripts/utils.js"></script>
    @section LeftMenu
{
        <p>test</p>
    }
</body>

</html>